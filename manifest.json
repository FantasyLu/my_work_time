{
  "manifest_version": 3,
  "name": "MyTime - 工作时间记录",
  "version": "1.0",
  "description": "记录每日工作时间的Chrome插件",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}